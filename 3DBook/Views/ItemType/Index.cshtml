@model List<_3DBook.UseCases.Dtos.ItemTypeViewModel.ItemTypesViewModel>
@{
    ViewData["Title"] = "Item Type list";
}
@if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
{
    <a class="btn btn-dark col-2" asp-action="Create" asp-controller="ItemType">Add New</a>
    <hr />
}

<div class="row justify-content-center">

    <div class="col-auto">
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>Name</th>
            </tr>

            </thead>
            <tbody>
                @foreach (var element in Model)
                {
                    <tr>
                        <td>@element.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>